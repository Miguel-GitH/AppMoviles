<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_cancion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nota_musical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/text_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de Canción"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artista"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_favorito"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:src="@drawable/small_star_icon"
        android:contentDescription="@string/a_adir_a_favoritos"
        android:background="?attr/selectableItemBackgroundBorderless" />
</LinearLayout>
